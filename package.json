{
  "name": "image-gallery",
  "version": "0.1.0",
  "private": true,
  "author": "Joseph Gattuso <joseph.gattuso@gmail.com>",
  "license": "MIT",
  "description": "Image gallery powered by React and Tailwind CSS",
  "main": "index.js",
  "repository": "git@github.com:josephgattuso/image-gallery.git",
  "scripts": {
    "start": "yarn run react-scripts start",
    "start:css": "yarn run watch:css && react-scripts start",
    "build": "yarn run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "watch:css": "postcss src/assets/tailwind.css -o src/assets/main.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "postcss-cli": "^7.1.0",
    "tailwindcss": "^1.3.4"
  }
}